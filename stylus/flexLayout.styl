@import 'nib'

html
	min-height 		100%
	min-width 		100%
	max-height 		100%
	max-width 		100%
	display 		flex

body
	display 		flex
	flex-direction 	column
	margin 			0
	flex 			1
	
	header
		display 			flex
		flex 				1
		justify-content 	center
		align-items 		center
		background-color 	#111
		color				#eee

	footer
		display 			flex
		flex 				1
		justify-content 	center
		align-items 		center
		background-color 	#111
		color				#eee

	section
		display 			flex
		flex 				10

		article
			display 			flex
			flex-direction		column
			flex 				4
			justify-content 	center
			align-items 		center
			background-color 	#fff