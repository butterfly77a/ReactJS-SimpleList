@import 'nib'

html
	min-height 			100%
	min-width 			100%
	max-height 			100%
	max-width 			100%
	display 			flex

body
	display 			flex
	flex 				1
	flex-direction 		column
	margin 				0
	
	header
		display 			flex
		flex 				1
		justify-content 	flex-start
		align-items 		center
		padding-left		1%
		color				#eee
		background-color 	#111
		background-image 	url("https://static.platzi.com/static/images/platzi-assets/platzi_logo_52_movil_1x.e9977b476db3.png");
		background-repeat	no-repeat
		background-position	99% 50%

	footer
		display 			flex
		flex 				1
		justify-content 	flex-end
		align-items 		center
		background-color 	#111
		color				#eee

	section
		display 			flex
		flex 				10

		article
			display 			flex
			flex-direction		column
			flex 				4
			justify-content 	center
			align-items 		center
			background-color 	#fff
	